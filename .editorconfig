root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.lua]
indent_style = tab
quote_style = double
# https://luals.github.io/wiki/formatter/
end_statement_with_semicolon = never
trailing_table_separator = smart

[*.{yaml,yml},{.pkgmeta}]
indent_style = space
indent_size = 2
